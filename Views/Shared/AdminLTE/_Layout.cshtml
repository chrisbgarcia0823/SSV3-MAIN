@using ShopSuppliesV3.Helpers;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />

    <title>SSV3 | @ViewData["Title"]</title>
    <partial name="AdminLTE/_Styles" />
    <link rel="icon" type="image/jpg" href="~/img/logo3.jpg">
    @RenderSection("Styles", required: false)

</head>
<body class="hold-transition sidebar-mini layout-fixed layout-md-footer-fixed text-sm">
    <div class="wrapper">
        <partial name="AdminLTE/_TopNavigation" />
        <partial name="AdminLTE/_MainNavigation" />
        <partial name="AdminLTE/_PreLoader" />
        <div class="content-wrapper">
            <div class="content-header" id="contentHeader" name="contentHeader">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            @*<h1 class="m-0 text-dark">Starter Page</h1>*@
                        </div>
                        <div class="col-sm-6">
@*                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">Starter Page</li>
                            </ol>*@
                        </div>
                    </div>
                </div>
            </div>
            <section class="content">
                <div class="container-fluid">
                    <div class="p-3">
                        @RenderBody()
                    </div>
                </div>
            </section>
        </div>
        
        <aside class="control-sidebar control-sidebar-dark">
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <partial name="AdminLTE/_Footer" />
    </div>

    <partial name="AdminLTE/_Scripts" />
    @RenderSection("Scripts", required: false)
</body>
</html>