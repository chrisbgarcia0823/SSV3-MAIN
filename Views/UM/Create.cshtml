@model ShopSuppliesV3.Models.SSv3_GAL_UMTBL

@{
    ViewData["Title"] = "Unit of Measure";
    Layout = "~/Views/Shared/adminLTE/_Layout.cshtml";
}

<form asp-action="Create" method="post">
    <div class="card card-outline card-danger mx-auto" style="width:30rem">
        <div class="card-header">
            <h3>Create Unit of Measure</h3>
        </div>
        <div class="card-body">
            <div class="form-group row">
                <label for="UM">Unit Of Measure</label> <span class="text-danger">*</span>
                <input asp-for="UnitOfMeasure" class="form-control" required/>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                <div class="col text-right">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>